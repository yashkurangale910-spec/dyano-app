# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Server Configuration
PORT=3005
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# API Configuration
API_TIMEOUT=30000
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# JWT Authentication (Phase 2)
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long_change_this
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Database Configuration (Phase 3)
# Local: mongodb://localhost:27017/dyano
# Atlas: mongodb+srv://<user>:<password>@cluster0.xxxx.mongodb.net/dyano
MONGODB_URI=mongodb://localhost:27017/dyano
